<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green_dark_ecoriego"
    tools:context=".SplashActivity">

    <!-- ImageView para mostrar el logo --><ImageView
    android:id="@+id/splashLogo"
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:src="@drawable/ecoriego_logo"
    android:contentDescription="Logo de Ecoriego"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

    <!-- Texto debajo del logo --><TextView
    android:id="@+id/appNameTextView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="ECO RIEGO"
    android:textColor="@android:color/white"
    android:textSize="36sp"
    android:textStyle="bold"
    android:layout_marginTop="16dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/splashLogo" />

    <TextView
        android:id="@+id/appSloganTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Consumo y ProducciÃ³n Sostenibles"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appNameTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>
